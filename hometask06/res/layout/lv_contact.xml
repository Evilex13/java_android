<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView android:layout_width="@android:dimen/notification_large_icon_width" android:layout_height="@android:dimen/notification_large_icon_height"
               android:src="@drawable/annonym_small" android:id="@+id/imageView2"
               android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@id/textView2" android:layout_alignParentTop="true" android:layout_toEndOf="@+id/imageView2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@id/textView6" android:layout_above="@id/textView8" android:layout_toEndOf="@+id/imageView2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@id/textView8" android:layout_alignBottom="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_call2"
            android:src="@android:drawable/ic_menu_call"
            android:layout_alignParentTop="true" android:layout_toStartOf="@+id/imageButton_email2"
            android:layout_alignBottom="@id/textView8"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_email2"
            android:src="@android:drawable/ic_dialog_email"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/textView8"/>

</RelativeLayout>