<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:src="@drawable/annonym"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <ListView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_below="@+id/imageView" android:layout_alignParentStart="true"
    android:id="@+id/lv_info"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_call" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imageView" android:src="@android:drawable/ic_menu_call"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_email" android:layout_below="@+id/imageButton_call"
            android:layout_alignParentEnd="true" android:layout_toEndOf="@+id/imageView"
            android:src="@android:drawable/ic_dialog_email"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_info"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_above="@+id/lv_info" android:layout_toEndOf="@+id/imageView"/>

</RelativeLayout>

