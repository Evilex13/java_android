<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme15" parent="@android:style/Theme.Black">
        <item name="android:background">#528d64</item>
        <item name="android:textColor">#93f0eb</item>
        <item name="android:buttonStyle">@style/Button15Style</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:id">@id/theme15</item>
    </style>

    <style name="Theme14" parent="@android:style/Theme.Black">
        <item name="android:background">#788d59</item>
        <item name="android:textColor">#f0d65a</item>
        <item name="android:textSize">30sp</item>
        <item name="android:id">@id/theme14</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme13" parent="@android:style/Theme.Black">
        <item name="android:background">#8d0032</item>
        <item name="android:textColor">#f02c23</item>
        <item name="android:textSize">24sp</item>
        <item name="android:id">@id/theme13</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Button15Style" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button15</item>
        <item name="android:text"/>
        <item name="android:textColor">#f83b2249</item>
        <item name="android:textSize">45sp</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Black">
    </style>

    <item name="theme15" type="id">theme15</item>
    <item name="theme14" type="id">theme14</item>
    <item name="theme13" type="id">theme13</item>

    <style name="UserAlertDlg" parent="@android:style/Theme">
        <item name="android:textAppearanceMedium">@style/dlgBodyText</item>
        <item name="android:textAppearanceLarge">@style/dlgTitleText</item>
    </style>

    <!-- стиль текста заголовка -->
    <style name="dlgTitleText" >
        <item name="android:padding">6dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- стиль текста сообщения -->
    <style name="dlgBodyText" >
        <item name="android:padding">6dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>