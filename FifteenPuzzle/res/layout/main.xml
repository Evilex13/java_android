<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ru.mydroid.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/master"
            android:layout_gravity="center"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/textView" android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2" android:layout_marginTop="41dp">


    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="*" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_below="@+id/textView">


        <TableRow>

            <ru.mydroid.SquareButton android:id="@+id/button11" />

            <ru.mydroid.SquareButton android:id="@+id/button12" />

            <ru.mydroid.SquareButton android:id="@+id/button13" />

            <ru.mydroid.SquareButton android:id="@+id/button14" />

        </TableRow>

        <TableRow>

            <ru.mydroid.SquareButton android:id="@+id/button21" />

            <ru.mydroid.SquareButton android:id="@+id/button22" />

            <ru.mydroid.SquareButton android:id="@+id/button23" />

            <ru.mydroid.SquareButton android:id="@+id/button24" />
        </TableRow>

        <TableRow>

            <ru.mydroid.SquareButton android:id="@+id/button31" />

            <ru.mydroid.SquareButton android:id="@+id/button32" />

            <ru.mydroid.SquareButton android:id="@+id/button33" />

            <ru.mydroid.SquareButton android:id="@+id/button34" />
        </TableRow>

        <TableRow>

            <ru.mydroid.SquareButton android:id="@+id/button41" />

            <ru.mydroid.SquareButton android:id="@+id/button42" />

            <ru.mydroid.SquareButton android:id="@+id/button43" />

            <ru.mydroid.SquareButton android:id="@+id/button44" />
        </TableRow>
    </TableLayout>

    </ru.mydroid.SquareLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_field"
            android:id="@+id/textView"
            android:textSize="16sp"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_field2"
            android:textSize="16sp"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
</RelativeLayout>
